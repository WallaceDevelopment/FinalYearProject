extends layout-auth
block content
      .wrapper
           form.form-other(method='', action='')
             h3(id='adminID') #[center Reset User Password]

             br
             - if(message !=null){
             
             div(class='alert alert-danger' text-align='centre' style='display:block') #{message}
              br
              a(href="/admin") #[center Return to Administrator Settings]]

             - }

             - if(success !=null){
             
             //- p(style="visibility:show" id="adminSelectSuc") #{success}
             div(class='alert alert-success' text-align='centre' style='display:block') #{success}
              br
              a(href="/admin") #[center Return to Administrator Settings]
                       
             - }
           

           form.form-other(method='post', action='/admin-reset-password')
             input.form-control(type='text', name='selectResetUser', placeholder='Existing User', maxlength='30' required)
             br
             button.btn.btn-lg.btn-primary.btn-block(type='submit' id="selectResetUserSubmit") Reset Password

           form.form-other(method='', action='')

             a(href="/admin" type="button" class="btn btn-default btn-block") Return to Admin Settings

        







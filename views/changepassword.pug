extends layout
block content
      .wrapper
        form.form-signin(method='post', action='/change-unauth-password')
          h3.form-signin-heading Forgotten Password
          |
          //- This displays a notification box in /index when a #message alert is produced by app.js, 

          input.form-control(type='text', name='newPasswordUsername', placeholder='Username' required)
          |
          input.form-control(type='password', name='newPassword', placeholder='New Password' required)
          label.checkbox
          |
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Change Password
          



extends layout

block content
  
        .wrapper
          .alert(class="alert-danger", role="alert", id="error-group", style="display: none")
            ul(id="errors")
          form.form-signin(method='post' action='/register')
            h3 #[center Register a new account]

            a(id ="registerTooltip" type="button" class="btn btn-info btn-sm" data-html="true" data-toggle="tooltip" data-placement="left" offset ="40" animation="true" title="<li>Username and Full Name must not exceed 40 characters.</li><li>Passwords must have a minimum of 5 characters.</li><li>Emails must have an '@' symbol.</li><li>Passwords must match.</li>") Hover for Requirements


            br
            - if(message !=null){
            br
             
            div(class='alert alert-danger' text-align='centre' style='display:block') #{message}

            - }

            - if(success !=null){
            br
             
             //- p(style="visibility:show" id="adminSelectSuc") #{success}
            div(class='alert alert-success' text-align='centre' style='display:block') #{success}
                       
            - }

            br
            |
            .form-group
              label(for='username') Username
              input.form-control(type='text', name='username', placeholder='Username' maxlength='40' required autofocus)
            |
            .form-group
              label(for='fullname') Full Name
              input.form-control(type='text', name='fullname', placeholder='Full Name' maxlength='40' required)
            |
            .form-group
              label(for='email') Email
              input.form-control(type='text', name='email', placeholder='Email' required)
            |
            .form-group
              label(for='password') Password
              input.form-control(type='password', name='password', placeholder='Password' required)
            |
            .form-group
              label(for='confirmPassword') Confirm Password
              input.form-control(type='password', name='confirmPassword', placeholder='Confirm Password' required)
            |
            button.btn.btn-lg.btn-primary.btn-block(type='submit' id="register-btn") Register
            |



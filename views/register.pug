extends layout

block content
  
        .wrapper
          .alert(class="alert-danger", role="alert", id="error-group", style="display: none")
            ul(id="errors")
          form.form-signin(method='post' action='/register')
            h3.form-signin-heading Register a new user
            |
            .form-group
              input.form-control(type='text', name='username', placeholder='Username' required)
            |
            .form-group
              input.form-control(type='text', name='fullname', placeholder='Full Name' required)
            |
            .form-group
              input.form-control(type='text', name='email', placeholder='Email' required)
            |
            .form-group
              input.form-control(type='password', name='password', placeholder='Password' required)
            |
            .form-group
              input.form-control(type='password', id='confirmPassword', placeholder='Confirm Password' required)
            |
            button.btn.btn-lg.btn-primary.btn-block(type='submit' id="register-btn") Register
            |
            - if(message){
            p(style='color:red' text-align='centre') #{message}
            - }


extends layout-auth
block content
      style.
        table { width: 100%; }
        th, tr, td {
          border: 1px solid black;
          padding: 10px;
          margin: 10px;
        }
      .wrapper
           form.form-signin(method='', action='')
             h3.form-signin-heading Welcome: #{full_name}
             table
                tr
                    th Username
                    th Full Name
                tr
                    td  #{username}
                    td  #{full_name}
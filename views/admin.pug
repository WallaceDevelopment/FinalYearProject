extends layout-auth
block content
      style.
        table { width: 100%; }
        th, tr, td {
          border: 1px solid black;
          padding: 10px;
          margin: 10px;
        }
      .wrapper
           form.form-signin(method='', action='/dashboard')
             h4.form-signin-heading.text-wrap #[justify Administrator, #{full_name}]
             
             br
             p #[center You have successfully accessed this page because your account is set as an Administrator. #[br]#[br] Please note that this page is a #[b work in progress]. You will not be able to access this page as a normal user.]

           form.form-signin(method='', action='')
             a(href="/dashboard" type="button" class="btn btn-default btn-block") Open Dashboard
             button(id="showPasswordForm" type="button" class="btn btn-default btn-block") Change Password

           form.form-signin(id="formAuthPassword" method='post', action='/change-auth-password')
             input.form-control(type='password', name='passwordchange', placeholder='New Password' required)
             input.form-control(type='password', name='confirmPasswordChange' placeholder='Confirm New Password' required)
             button.btn.btn-lg.btn-primary.btn-block(type='submit') Submit



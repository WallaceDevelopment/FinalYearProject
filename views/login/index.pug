extends ../layout
block content
      .wrapper
        form.form-signin(method='post', action='/signin')
          h3.form-signin-heading Login to Dashboard
          |
          //- This displays a notification box in /index when a #message alert is produced by app.js, 
          - if(message !=''){
            div(class='alert alert-info' text-align='centre' style='display:block') #{message}
          - }
          input.form-control(type='text', name='username', placeholder='Username' required)
          |
          input.form-control(type='password', name='password', placeholder='Password' required)
          label.checkbox
          |
          button.btn.btn-lg.btn-primary.btn-block(type='submit') Login
          |
        form.form-signin(action="/register")
          button.btn.btn-sm.btn-default.btn-block(type='submit') Register a new user
        form.form-signin(action="/password")
          button.btn.btn-sm.btn-default.btn-block(type='submit') Forgotten password?



extends ../layout
block content
      .wrapper

        form.form-signin(method='post', action='/signin')
          h3 #[center Sign in  ]


          |
          //- This displays a notification box in /index when a #message alert is produced by app.js, 
          - if(message !=''){
            div(class='alert alert-info' text-align='centre' style='display:block') #{message}
          - }

          - if(success !=null){
             
             //- p(style="visibility:show" id="adminSelectSuc") #{success}
             div(class='alert alert-success' text-align='centre' style='display:block') #{success}
             br
          - }










          br
          .form-group
            
            input.form-control(id='loginUsername', type='text', name='username', placeholder='Username' required autofocus)
          |
          .form-group
            
            input.form-control(id="loginPassword", type='password', name='password', placeholder='Password' required)
          |
          button.btn.btn-lg.btn-primary.btn-block(type='submit') #[span(class="glyphicon glyphicon-send")] 
          label.checkbox
          a(href="/register") #[center #[u Register a New User]]
          br
          a(href="/changepassword") #[center #[u Forgotten Password?]]






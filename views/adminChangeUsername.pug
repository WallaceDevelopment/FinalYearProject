extends layout-auth
block content
      .wrapper
           form.form-signin(method='', action='')
             h3(id='adminID') #[center Change User Username]

             br
             - if(message !=null){
             
             div(class='alert alert-danger' text-align='centre' style='display:block') #{message}
              br
              a(href="/admin") #[center Return to Administrator Settings]

             - }

             - if(success !=null){
             
             //- p(style="visibility:show" id="adminSelectSuc") #{success}
             div(class='alert alert-success' text-align='centre' style='display:block') #{success}
              br
              a(href="/admin") #[center Return to Administrator Settings]

             - }

           form.form-signin(method='post', action='/admin-change-username')
             input.form-control(type='text', name='selectChangeUsername', placeholder='Existing User', maxlength='30' required)
             br
             input.form-control(type='text', name='selectChangeUsernameNew', placeholder='New Username', maxlength='30' required)
             br
             button.btn.btn-lg.btn-primary.btn-block(type='submit' id="selectResetUserSubmit") Change Username

        






